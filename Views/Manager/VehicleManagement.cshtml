
@{
    ViewBag.Title = "VehicleManagement";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<style>
body { background-image: url('VMCover.jpg'); background-repeat: no-repeat; background-attachment: fixed; background-size: 100% 100%; }
</style>

<body style="background-image: url('../../media/VMCover.jpg'); background-size:cover; background-repeat: no-repeat;">
    <div class="py-20 flex flex-wrap w-full  flex-col items-center text-center">
        <h3 class="sm:text-3xl text-2xl font-medium title-font mb-2 text-gray-900">Vehicle Management</h3>
        <p class="lg:w-1/2 w-full leading-relaxed text-gray-900">Manage the Records of Vehicles Here.</p>
    </div>
    <section class="text-gray-600 body-font">
        <div class="container px-5 py-24 mx-auto">
            <div class="flex flex-wrap -mx-4 -mb-10 text-center">
                <div class="sm:w-1/2 mb-10 px-4">
                    <div class="rounded-lg h-64 overflow-hidden">
                        <img alt="content" class="object-cover object-center h-full w-full" src="https://dxsrvil5gxzpy.cloudfront.net/wp-content/uploads/2019/11/07135837/UsedVehicles-Banner-two-silver-cars-and-two-black-cars-with-Red-background.jpg">
                    </div>
                    <h2 class="title-font text-2xl font-medium text-gray-900 mt-6 mb-3">Used Vehicles</h2>
                    <h1 class="leading-relaxed text-2xl text-red-600">Here you manage used vehicles of all makes and models.</h1>
                    <a href="/Manager/UsedCarsList"><button class="flex mx-auto mt-6 text-white bg-red-500 border-0 py-2 px-5 focus:outline-none hover:bg-red-600 rounded">Manage</button></a>
                </div>
                <div class="sm:w-1/2 mb-10 px-4">
                    <div class="rounded-lg h-64 overflow-hidden">
                        <img alt="content" class="object-cover object-center h-full w-full" src="~/media/newVPost.jpg">
                    </div>
                    <h2 class="title-font text-2xl font-medium text-gray-900 mt-6 mb-3">New Vehicles</h2>
                    <h3 class="leading-relaxed text-2xl text-red-600">Here you manage new vehicles of all makes and models.</h3>
                    <button class="flex mx-auto mt-6 text-white bg-red-500 border-0 py-2 px-5 focus:outline-none hover:bg-red-600 rounded">Manage</button>
                </div>
            </div>
        </div>
    </section>
</body>